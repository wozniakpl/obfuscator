// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"owner": "custom",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^(.*)$",
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*(Compiler starting).*",
					"endsPattern": ".*(compiled successfully|Done).*"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "tsc: build - tsconfig.json",
			"type": "shell",
			"command": "${workspaceFolder}/node_modules/.bin/tsc",
			"args": ["-p", "."],
			"problemMatcher": ["$tsc"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		}
	]
}
